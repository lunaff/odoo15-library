<odoo>
    <record id="view_library_loan_export_wizard_form" model="ir.ui.view">
        <field name="name">library.loan.export.wizard.form</field>
        <field name="model">library.loan.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Library Loan Export">
                <sheet>
                    <group>
                        <field name="book_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_export_excel" type="object" string="Export to Excel" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
