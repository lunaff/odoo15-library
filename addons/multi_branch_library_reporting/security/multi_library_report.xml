<odoo>
    <record id="library_book_admin_rule" model="ir.rule">
        <field name="name">Admin Access to All Library Reporting</field>
        <field name="model_id" ref="model_multi_report"/> 
        <field name="domain_force">[(1, '=', 1)]</field> 
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="branch_library_report_rule" model="ir.rule">
        <field name="name">Branch Library Report Access</field>
        <field name="model_id" ref="model_multi_report"/> 
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field> 
    </record>

    <record id="library_book_wizard_admin_rule" model="ir.rule">
        <field name="name">Admin Access to Library Report Wizard</field>
        <field name="model_id" ref="model_multi_report_wizard"/>
        <field name="domain_force">[(1, '=', 1)]</field> 
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="branch_library_report_wizard_rule" model="ir.rule">
        <field name="name">Branch Manager Access to Library Report Wizard</field>
        <field name="model_id" ref="model_multi_report_wizard"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field> 
    </record>


</odoo>
