<odoo>
    <record id="view_wizard_loan" model="ir.ui.view">
        <field name="name">wizard.loan.form</field>
        <field name="model">wizard.loan</field>
        <field name="arch" type="xml">
            <form string="Library Loan Filter">
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_search_loans" type="object" string="Search" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>    

</odoo>
