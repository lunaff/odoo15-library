<odoo>
    <record id="library_loan_admin_rule" model="ir.rule">
        <field name="name">Admin Access to All Library loans</field>
        <field name="model_id" ref="model_library_loan"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>

   <record id="library_loan_branch_rule" model="ir.rule">
        <field name="name">Loan Access per Branch</field>
        <field name="model_id" ref="model_library_loan"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="wizard_loan_admin_rule" model="ir.rule">
        <field name="name">Admin Access to All Wizard Loans</field>
        <field name="model_id" ref="model_wizard_loan"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
    </record>


    <record id="wizard_loan_branch_rule" model="ir.rule">
        <field name="name">Wizard Loan Access per Branch</field>
        <field name="model_id" ref="model_wizard_loan"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>