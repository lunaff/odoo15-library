<odoo>

    <record id="multi_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form.inherit</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="library_managed.view_library_book_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <field name="company_id" />
            </xpath>
        </field>
    </record>

    <record id="multi_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree.inherit</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="library_managed.view_library_book_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <field name="company_id" />
            </xpath>
        </field>
    </record>

</odoo>