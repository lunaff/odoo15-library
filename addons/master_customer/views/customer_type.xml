<odoo>

    <!-- Inherit Sale Order Form View to Display Customer Type -->
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Insert Customer Type Field After Partner ID Field -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <!-- Display customer_type field from res.partner -->
                <field name="partner_id.customer_type" readonly="1" string="Customer Type"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Sale Order Tree View if needed -->
    <record id="view_sale_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <!-- Insert Customer Type Field After Partner ID Field -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_id.customer_type" readonly="1" string="Customer Type"/>
            </xpath>
        </field>
    </record>

</odoo>
